{
  "name": "pdf-search-desktop",
  "version": "1.0.0",
  "main": "main.js",
  "private": true,
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "devDependencies": {
    "electron": "^40.1.0",
    "electron-builder": "^26.4.0"
  },
  "build": {
    "appId": "com.pdfsearch.desktop",
    "productName": "PDF Search Engine",
    "asar": true,
    "files": [
      "main.js",
      "rendererBridge.js",
      "splash.html",
      "splash.js",
      "state.js",
      "state.json"
    ],
    "extraResources": [
      {
        "from": "../frontend/dist",
        "to": "frontend/dist"
      },
      {
        "from": "../docker/docker-compose.yml",
        "to": "docker/docker-compose.yml"
      },
      {
        "from": "../docker/.env.example",
        "to": "docker/.env.example"
      }
    ],
    "win": {
      "target": "nsis"
    }
  }
}
